<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="@string/configure_widget_name" android:layout_marginBottom="8dp" />

    <EditText android:id="@+id/appwidget_name" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:inputType="textCapWords"/>

    <fragment android:name="com.github.nickpesce.neopixels.CommandEditor"
        android:id="@+id/fCommandEditor"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_command_editor" />

    <Button android:id="@+id/bAddWidget" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="@string/add_widget"
        android:layout_marginTop="8dp" />

</LinearLayout>